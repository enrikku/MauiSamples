<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiSamples.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Button
                x:Name="btnPopUp"
                Clicked="btnPopUp_Clicked"
                Text="Page PopUp" />
            <Button
                x:Name="btnBarcodeScan"
                Clicked="btnBarcodeScan_Clicked"
                Text="Barcode Scan" />
            <Button
                x:Name="btnToDo"
                Clicked="btnToDo_Clicked"
                Text="ToDo" />
            <Button
                x:Name="btnFingerPrint"
                Clicked="btnFingerPrint_Clicked"
                Text="Finger Print" />
            <Button
                x:Name="btnSpeechToText"
                Clicked="btnSpeechToText_Clicked"
                Text="Finger Print" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
