<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiSamples.Views.pageSpeechToText"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Speech to Text">

    <VerticalStackLayout
        Padding="24"
        Spacing="20"
        VerticalOptions="Center">

        <Button
            x:Name="btnSpeech"
            Padding="16"
            BackgroundColor="#007aff"
            Clicked="btnSpeech_Clicked"
            CornerRadius="12"
            FontSize="20"
            HorizontalOptions="Center"
            Text="ðŸŽ¤ Start Listening"
            TextColor="White" />

        <Frame
            Padding="16"
            BackgroundColor="#f9f9f9"
            BorderColor="#cccccc"
            CornerRadius="12"
            HasShadow="True"
            HorizontalOptions="Fill"
            VerticalOptions="Center">

            <Label
                x:Name="lblText"
                FontSize="18"
                LineBreakMode="WordWrap"
                Text="Speak and see the result here..."
                TextColor="#333" />
        </Frame>
    </VerticalStackLayout>
</ContentPage>
